<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/standard_indent_16dp"
    android:paddingEnd="@dimen/standard_indent_16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="@dimen/padding_button_settings_32dp">

        <ImageView
            android:id="@+id/buttonBackSettings"
            style="@style/HeaderImageBack" />

        <TextView
            style="@style/HeaderTextView"
            android:layout_gravity="center|start"
            android:layout_marginStart="@dimen/padding_button_settings_32dp"
            android:text="@string/settings_text" />
    </FrameLayout>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchTheme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button_settings_72dp"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/dark_theme_text"
        android:textAlignment="textStart"
        android:textFontWeight="400"
        android:textSize="@dimen/text_in_settings_16sp"
        app:thumbTint="@color/switch_thumb_colors"
        app:trackTint="@color/switch_track_colors" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button_settings_72dp">

        <TextView
            style="@style/settingsText"
            android:text="@string/share_app_text" />

        <ImageView
            android:id="@+id/buttonShareApp"
            style="@style/ButtonSettingsImg"
            android:src="@drawable/share_icon" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button_settings_72dp">

        <TextView
            style="@style/settingsText"
            android:text="@string/send_support_text" />

        <ImageView
            android:id="@+id/buttonSendSupport"
            style="@style/ButtonSettingsImg"
            android:src="@drawable/support_icon" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button_settings_72dp">

        <TextView
            style="@style/settingsText"
            android:text="@string/user_agreement" />

        <ImageView
            android:id="@+id/buttonUserAgreement"
            style="@style/ButtonSettingsImg"
            android:src="@drawable/arrow_forward_icon" />
    </FrameLayout>


</LinearLayout>