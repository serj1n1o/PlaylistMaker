<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/standard_indent_16dp"
    android:paddingEnd="@dimen/standard_indent_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="@dimen/padding_button_settings"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/icon_back" />

        <TextView
            style="@style/HeaderTextView"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_button_settings"
            android:text="@string/settings_text" />

    </LinearLayout>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:paddingTop="@dimen/padding_button_settings"
        android:paddingBottom="@dimen/padding_button_settings"
        android:text="@string/dark_theme_text"
        android:textAlignment="textStart"
        android:textFontWeight="400"
        android:textSize="@dimen/text_in_settings" />


    <LinearLayout
        android:id="@+id/buttonShareApp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_button_settings"
        android:paddingBottom="@dimen/padding_button_settings">

        <TextView
            style="@style/settingsText"
            android:text="@string/share_app_text" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"

            android:src="@drawable/share_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonSendSupport"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_button_settings"
        android:paddingBottom="@dimen/padding_button_settings">

        <TextView
            style="@style/settingsText"
            android:text="@string/send_support_text" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/support_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonUserAgreement"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_button_settings"
        android:paddingBottom="@dimen/padding_button_settings">

        <TextView
            style="@style/settingsText"
            android:text="@string/user_agreement" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/arrow_forward_icon" />
    </LinearLayout>


</LinearLayout>