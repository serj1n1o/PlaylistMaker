<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_activity_color_blue"
    android:orientation="vertical"
    android:paddingStart="@dimen/standard_indent_16dp"
    android:paddingEnd="@dimen/standard_indent_16dp"
    android:paddingBottom="28dp">

    <FrameLayout
        android:id="@+id/header_title_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="0.25">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text" />

    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/search_text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_text"
        app:cornerRadius="@dimen/corner_radius_button"
        app:icon="@drawable/search_icon"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/black" />


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/standard_indent_16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/media_library"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_text"
        app:cornerRadius="@dimen/corner_radius_button"
        app:icon="@drawable/library_icon"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/black" />


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/standard_indent_16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/settings_text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_text"
        app:cornerRadius="@dimen/corner_radius_button"
        app:icon="@drawable/settings_icon"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/black" />


</LinearLayout>