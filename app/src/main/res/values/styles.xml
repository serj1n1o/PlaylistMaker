<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/standard_text_22sp</item>
        <item name="cornerRadius">@dimen/corner_radius_button_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_min_8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">@dimen/standard_indent_16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standard_text_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="HeaderImageBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="tint">?attr/colorSecondary</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/icon_back</item>
    </style>

    <style name="settingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_in_settings_16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ButtonSettingsImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="tint">?attr/colorOnSecondary</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingStart">@dimen/padding_button_settings_img_56dp</item>
    </style>

    <style name="recyclerSearchText">
        <item name="android:textSize">@dimen/text_min_11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="placeholderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_error_19sp</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="btnUpdateAndClear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_24dp</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">@dimen/padding_btn_update_6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="cornerRadius">@dimen/radius_btn_update_54dp</item>
    </style>

    <style name="playlistTextDataTrack">
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="playlistTextDataTrack.playlistDataTrackTitle">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="tabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>

    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>