<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standard_text_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="HeaderImageBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">?attr/colorSecondary</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/icon_back</item>
    </style>

    <style name="settingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_in_settings_16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="nameItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_in_settings_16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="ButtonSettingsImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="tint">?attr/colorOnSecondary</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingStart">@dimen/padding_button_settings_img_56dp</item>
    </style>

    <style name="ButtonShareMenuPlaylist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="recyclerSearchText">
        <item name="android:textSize">@dimen/text_min_11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="placeholderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_error_19sp</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="btnUpdateAndClear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_24dp</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">@dimen/padding_btn_update_6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="cornerRadius">@dimen/radius_btn_update_54dp</item>
    </style>

    <style name="playlistTextDataTrack">
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="playlistTextDataTrack.playlistDataTrackTitle">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="tabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextBottomNav">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="InfoPlaylistText">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="textInputLayoutPlaylist" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/yp_blue</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="cursorColor">@color/yp_blue</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
    </style>

    <style name="textInputEditTextPlaylist">
        <item name="android:textFontWeight">400</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:textSelectHandle">@color/yp_blue</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_in_settings_16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="CustomAlertDialogThemeCreatePlaylist" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="CustomAlertDialogThemeDeletePlaylist" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="android:background">@color/white</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomDialogBodyText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomDialogTitleText</item>

    </style>

    <style name="CustomDialogBodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="CustomDialogTitleText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cornerRadiusPlaylistImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>